{
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "src/**/*-spec.ts",
        "dist",
        "node_modules"
    ],
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true
    }
}